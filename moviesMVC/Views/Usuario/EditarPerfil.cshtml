@model PerfilViewModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Edit Profile - Bootstrap 5 Style</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <style>
        /* body {
                    background-color: #f8f9fa;
                    font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
                } */

        .profile-picture-container {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto;
        }

        .camera-icon-overlay {
            position: absolute;
            bottom: 5px;
            right: 5px;
            background-color: #0d6efd;
            color: white;
            border-radius: 50%;
            padding: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #fff;
            transition: background-color 0.2s;
        }

            .camera-icon-overlay:hover {
                background-color: #0b5ed7;
            }

        .material-symbols-outlined {
            */ font-size: 20px;
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        /* .nav-logo-icon {
                    color: #0d6efd;
                    width: 32px;
                    height: 32px;
                } */

        #ImagenPerfil {
            display: none;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5" style="max-width: 800px;">
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-semibold">Edit Profile</h5>
            </div>
            <div class="card-body p-4">
                <form method="post" enctype="multipart/form-data">
                     <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="text-center mb-5">
                        <div class="profile-picture-container">
                            <img alt="Profile Image" id="profileImage"
                                 class="profile-img"
                                 src="@Model.ImagenUrlPerfil" />

                            <!-- Botón cámara que dispara el input -->
                            <button type="button" class="camera-icon-overlay" onclick="document.getElementById('ImagenPerfil').click()">
                                <span class="material-symbols-outlined">photo_camera</span>
                            </button>

                            <!-- Input oculto para subir archivo -->
                            <input id="ImagenPerfil" asp-for="ImagenPerfil"
                                   type="file"
                                   accept="image/png,image/jpeg,image/webp"
                                   class="form-control"
                                   onchange="previewImage(this)" />
                        </div>
                        <p class="text-muted small mt-2">Click icon to update your profile photo</p>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" type="text" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Apellido" class="form-label" for="lastName">Apellido</label>
                            <input asp-for="Apellido" class="form-control" id="lastName" type="text" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo</label>
                        <input asp-for="Email" class="form-control" id="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end gap-2 pt-4 border-top">
                        <a asp-action="Perfil" class="btn btn-outline-secondary">Cancelar</a>
                        <button asp-action="EditarPerfil" class="btn btn-primary px-4" type="submit">Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card border-danger shadow-sm">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-danger fw-bold mb-1">Deactivate Account</h6>
                    <p class="text-muted small mb-0">This action will temporarily disable your profile and services.</p>
                </div>
                <button class="btn btn-outline-danger btn-sm px-4">Deactivate</button>
            </div>
        </div>
    </div>

</body>
</html>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('profileImage').src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>